<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Controller.WatchOutEmergency">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REPORT EMERGENCY"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:textStyle="normal"
        android:textColor="#0A2F8A"/>

    <Button
        android:id="@+id/medical_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#0A2F8A"
        android:layout_marginBottom="10dp"
        android:textColor="@color/design_default_color_on_primary"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/medical_call"
            app:cornerRadius="200dp"
            android:layout_width="64dp"
            android:layout_height="75dp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:backgroundTint="#FF04C50C"
            app:icon="@drawable/ic_baseline_call_24"
            />

        <com.google.android.material.button.MaterialButton
            app:cornerRadius="50dp"
            android:layout_width="64dp"
            android:layout_height="75dp"
            android:visibility="gone"
            android:backgroundTint="@color/design_default_color_error"
            android:id="@+id/medical_sos"

            android:text="SOS" />

    </LinearLayout>

    <Button
        android:id="@+id/accident_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#0A2F8A"
        android:layout_marginBottom="10dp"
        android:textColor="@color/design_default_color_on_primary"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/accident_call"
            app:cornerRadius="200dp"
            android:layout_width="64dp"
            android:layout_height="75dp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:backgroundTint="#FF04C50C"
            app:icon="@drawable/ic_baseline_call_24"
             />

        <com.google.android.material.button.MaterialButton
            app:cornerRadius="50dp"
            android:layout_width="64dp"
            android:layout_height="75dp"
            android:visibility="gone"
            android:backgroundTint="@color/design_default_color_error"
            android:id="@+id/accident_sos"

            android:text="SOS" />

    </LinearLayout>

    <Button
        android:id="@+id/secutity_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#0A2F8A"
        android:layout_marginBottom="10dp"
        android:textColor="@color/design_default_color_on_primary"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/security_call"
            app:cornerRadius="200dp"
            android:layout_width="64dp"
            android:layout_height="75dp"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:backgroundTint="#FF04C50C"
            app:icon="@drawable/ic_baseline_call_24"
            />

        <Button
            android:id="@+id/security_sos"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="10dp"
            android:text="Security Sos"
            android:background="#0A2F8A"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            android:textColor="@color/design_default_color_on_primary"/>


    </LinearLayout>


</LinearLayout>